---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<style>
			html {
				font-family: "Jet Brains Mono", system-ui, sans-serif;
			}

			body {
				background: #120f1a;
				margin: 0;
			}

			html,
			body {
				height: 100%;
			}
		</style>
	</body>
</html>
